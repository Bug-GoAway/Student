/* pages/learningReport/index.wxss */
.container {
  padding: 20rpx;
  background-color: #f4f8fb; /* 淡蓝色背景，与AI伴学页保持一致 */
  min-height: 100vh;
  color: #333;
}

.header {
  text-align: center;
  margin-bottom: 30rpx;
  padding: 20rpx 0;
  background-color: #1296db; /* 主题蓝色 */
  color: #ffffff;
  border-radius: 16rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.content {
  background-color: #ffffff;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
}

.summary {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 30rpx;
  display: block;
}

.data-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #1296db; /* 主题蓝色 */
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #e9f3fd; /* 淡蓝分隔线 */
}

.data-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f0f0f0; /* 更淡的分隔线 */
}

.data-item:last-child {
  border-bottom: none;
}

.data-label {
  color: #555;
}

.data-value {
  color: #1296db; /* 主题蓝色 */
  font-weight: 500;
}

.chart-placeholder {
  text-align: center;
  padding: 40rpx;
  background-color: #e9f3fd; /* 淡蓝色占位背景 */
  border-radius: 8rpx;
  color: #1296db; /* 主题蓝色 */
  font-size: 28rpx;
}

.footer {
  text-align: center;
  padding-top: 20rpx;
}

.share-button.van-button {
  background-color: #1296db !important; /* 主题蓝色 */
  border-color: #1296db !important; /* 主题蓝色 */
  color: #ffffff !important;
  width: 80%;
}

.share-button.van-button--plain {
  background-color: transparent !important;
  color: #1296db !important;
  border: 1px solid #1296db !important;
}