/* 修改后的 WXSS 文件 */
.container {
  padding: 20rpx;
  background-color: #f4f8fb;
  min-height: 100vh;
}

.card-style {
  background-color: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.area-title-wrapper {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.area-title-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}

.area-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 学情报告入口 */
.report-entry-area {
  display: flex;
  justify-content: space-between;
  align-items: center;
  cursor: pointer;
}

.entry-left {
  display: flex;
  align-items: center;
}

.entry-icon {
  width: 64rpx;
  height: 64rpx;
  margin-right: 20rpx;
}

.entry-text {
  display: flex;
  flex-direction: column;
}

.entry-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 5rpx;
}

.entry-desc {
  font-size: 24rpx;
  color: #999;
}

.entry-arrow {
  color: #c8c9cc;
  font-size: 32rpx !important;
}

/* 错题变式训练区 */
.practice-area .area-title-wrapper {
  padding: 0 10rpx;
}

.practice-list .practice-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.practice-item:last-child {
  margin-bottom: 0;
}

.item-info {
  flex: 1;
  margin-right: 20rpx;
}

.item-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
  display: block;
}

.item-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.item-tags .van-tag {
  margin-right: 10rpx;
}

.practice-button.van-button--small {
  background-color: #1296db !important;
  border-color: #1296db !important;
  color: #ffffff !important;
  padding: 0 24rpx !important; 
  height: 56rpx !important;
  line-height: 56rpx !important;
  font-size: 24rpx !important;
}

.empty-practice,
.empty-task {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 30rpx;
  text-align: center;
  color: #999;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.7;
}